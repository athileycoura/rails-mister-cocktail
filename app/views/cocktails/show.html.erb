<h2><%= @cocktail.name %></h2>

<% @cocktail.doses.each do |dose| %>
<%= dose.description %> - <%= dose.ingredient.name %><br>
<%= link_to  "Delete dose", dose_path(dose), method: :delete %>
<% end %>

<%= render "doses/form", cocktail: @cocktail, dose: @dose %>
<%= link_to  "Cocktails Page", cocktails_path, class: "btn btn-primary" %>
<%= link_to "Delete", cocktail_path(@cocktail), method: :delete %>

